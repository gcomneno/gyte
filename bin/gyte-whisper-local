#!/usr/bin/env bash
set -euo pipefail

SELF="$(basename "$0")"
SELF_REAL="$(readlink -f -- "${BASH_SOURCE[0]}")"
ROOT="$(cd -- "$(dirname -- "$SELF_REAL")/.." && pwd -P)"
TARGET="$ROOT/scripts/$SELF"

if [[ ! -x "$TARGET" ]]; then
  echo "ERRORE: wrapper '$SELF' non trova script eseguibile: $TARGET" >&2
  exit 2
fi

exec "$TARGET" "$@"
